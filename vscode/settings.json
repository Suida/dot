{
    "window.zoomLevel": -0.5,

    "editor.fontSize": 14,
    "editor.fontFamily": "CaskaydiaCove NF",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.lineNumbers": "relative",
    "editor.renderLineHighlight": "all",
    "editor.stablePeek": true,
    "editor.suggestSelection": "first",
    "editor.peekWidgetDefaultFocus": "editor",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true,
    },

    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.scrollback": 5000,

    "breadcrumbs.enabled": true,
    "breadcrumbs.icons": false,

    "workbench.colorTheme": "Default Light+",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
        "statusBar.background": "#007ACC",
        "statusBar.noFolderBackground": "#007ACC",
        "statusBar.debuggingBackground": "#007ACC"
    },
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabCloseButton": "off",
    "workbench.sideBar.location": "right",
    "workbench.activityBar.visible": false,

    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/venv": true,
        "**/target/debug": true,
        "**/target/doc": true,
        "**/target/release": true,
        "**/target/rls": true,
    },

    // Zen Mode
    "zenMode.hideActivityBar": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.fullScreen": false,
    "zenMode.hideTabs": false,
    "zenMode.restore": true,

    "vim.disableExtension": false,
    "vim.leader": "<Space>",
    "vim.handleKeys": {
        "<Tab>": false,
    },
    // Easymotion
    "vim.easymotion": true,
    "vim.easymotionMarkerBackgroundColor": "gray",
    // Airline
    "vim.statusBarColorControl": false,
    "vim.statusBarColors.normal": ["#8FBCBB", "#434C5E"],
    "vim.statusBarColors.insert": "#BF616A",
    "vim.statusBarColors.visual": "#B48EAD",
    "vim.statusBarColors.visualline": "#B48EAD",
    "vim.statusBarColors.visualblock": "#A3BE8C",
    "vim.statusBarColors.replace": "#D08770",
    "vim.statusBarColors.commandlineinprogress": "#007ACC",
    "vim.statusBarColors.searchinprogressmode": "#007ACC",
    "vim.statusBarColors.easymotionmode": "#007ACC",
    "vim.statusBarColors.easymotioninputmode": "#007ACC",
    "vim.statusBarColors.surroundinputmode": "#007ACC",
    // Key mapping
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "y"],
            "after": ["\"", "*", "y"],
        },
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"],
        },
        {
            "before": ["<C-l>"],
            "after": [" ", " ", " ", " "],
        },
        {
            "before": ["<C-e>"],
            "after": ["<C-o>", "A"],
        },
        {
            "before": ["<C-o>"],
            "after": ["<C-o>", "A", "<CR>"],
        },
        {
            "before": ["<C-u>"],
            "after": ["<CR>", "<Esc>", "k", "A"],
        },
        {
            "before": ["<C-m>"],
            "after": ["<Enter>"],
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-j>"],
            "after": ["1", "0", "j"],
        },
        {
            "before": ["<C-k>"],
            "after": ["1", "0", "k"],
        },
        {
            "before": ["<C-h>"],
            "after": [":", "t", "a", "b", "p", "<CR>"],
        },
        {
            "before": ["<C-l>"],
            "after": [":", "t", "a", "b", "n", "<CR>"],
        },
        {
            "before": ["<leader>", "p"],
            "after": ["\"", "*", "p"],
        },
        {
            "before": ["K", "K"],
            "after": [":", "w", "<CR>"],
        },
        {
            "before": ["K", "L"],
            "after": [":", "q", "<CR>"],
        },
        {
            "before": ["<leader>", "h"],
            "after": ["<C-w>", "h"],
        },
        {
            "before": ["<leader>", "l"],
            "after": ["<C-w>", "l"],
        },
        {
            "before": ["\""],
            "commands": ["workbench.action.showCommands"],
        },
        {
            "before": ["<leader>", "g", "d"],
            "commands": ["editor.action.goToTypeDefinition"],
        },
        {
            "before": ["<leader>", "f"],
            "commands": ["editor.action.formatDocument"],
        },
    ],

    "emmet.triggerExpansionOnTab": true,
    // "emmet.showAbbreviationSuggestions": true,
    "emmet.showExpandedAbbreviation": "always",
    "emmet.syntaxProfiles": {
        "vue-html": "html",
        "vue": "html",
    },
    "emmet.includeLanguages": {
        "vue-html": "html",
        "vue": "html",
    },

    "window.menuBarVisibility": "toggle",

    "remote.SSH.showLoginTerminal": false,
    "remote.SSH.remotePlatform": {
        "Cursor": "linux",
        "cursor": "linux"
    },

    "python.languageServer": "Microsoft",
    "python.pythonPath": "C:\\Users\\You\\AppData\\Local\\Programs\\Python\\Python37\\python37.exe",
    "python.dataScience.sendSelectionToInteractiveWindow": true,

    "C_Cpp.updateChannel": "Insiders",

    // java maven
    "maven.executable.path": "D:\\JavaHome\\apache-maven-3.6.3\\bin",

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    "macros": {
        "openFileAndCloseSideBar": [
            "filesExplorer.openFilePreserveFocus",
            "workbench.action.toggleSidebarVisibility",
        ]
    },

    "[html]": {
        "editor.tabSize": 2,
    },
    "[javascript]": {
        "editor.tabSize": 2,
    },
    "files.associations": {
        "*.vue": "html",
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
}
